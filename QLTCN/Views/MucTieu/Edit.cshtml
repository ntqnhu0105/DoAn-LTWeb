@model QLTCCN.Models.Data.MucTieu

@{
    ViewData["Title"] = "Sửa mục tiêu";
}

<h2>Sửa mục tiêu</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="MaMucTieu" />

    <div class="form-group">
        <label asp-for="TenMucTieu" class="control-label">Tên mục tiêu</label>
        <input asp-for="TenMucTieu" class="form-control" />
        <span asp-validation-for="TenMucTieu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoTienMucTieu" class="control-label">Số tiền mục tiêu</label>
        <input asp-for="SoTienMucTieu" class="form-control" type="number" step="0.01" value="@Model.SoTienMucTieu.ToString("C")" />
        <span asp-validation-for="SoTienMucTieu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoTienHienTai" class="control-label">Số tiền hiện tại</label>
        <input asp-for="SoTienHienTai" class="form-control" type="number" step="0.01" value="@Model.SoTienHienTai.ToString("C")" />
        <span asp-validation-for="SoTienHienTai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaDanhMuc" class="control-label">Danh mục</label>
        <select asp-for="MaDanhMuc" class="form-control" asp-items="ViewBag.DanhMuc" required>
            <option value="">Chọn danh mục</option>
        </select>
        <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HanChot" class="control-label">Hạn chót</label>
        <input asp-for="HanChot" class="form-control" type="date" value="@Model.HanChot.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="HanChot" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}