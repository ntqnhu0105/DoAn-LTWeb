@model QLTCCN.Models.Data.DanhMuc

@{
    ViewData["Title"] = "Thêm danh mục mới";
}

<h2>Thêm danh mục mới</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TenDanhMuc" class="control-label">Tên danh mục</label>
        <input asp-for="TenDanhMuc" class="form-control" />
        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Loai" class="control-label">Loại</label>
        <select asp-for="Loai" class="form-control">
            <option value="">Chọn loại</option>
            <option value="Thu">Thu</option>
            <option value="Chi">Chi</option>
        </select>
        <span asp-validation-for="Loai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}