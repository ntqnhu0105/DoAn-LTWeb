@model QLTCCN.Models.Data.DanhMuc

@{
    ViewData["Title"] = "Xóa danh mục";
}

<h2>Xóa danh mục</h2>

<h3>Bạn có chắc muốn xóa danh mục này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tên danh mục</dt>
        <dd class="col-sm-10">@Model.TenDanhMuc</dd>

        <dt class="col-sm-2">Loại</dt>
        <dd class="col-sm-10">@Model.Loai</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaDanhMuc" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>