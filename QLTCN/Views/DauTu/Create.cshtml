@model QLTCCN.Models.Data.DauTu

<h2>Thêm đầu tư</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="MaLoaiDauTu" class="control-label">Loại đầu tư</label>
        <select asp-for="MaLoaiDauTu" class="form-control" asp-items="ViewBag.LoaiDauTu" required>
            <option value="">Chọn loại đầu tư</option>
        </select>
        <span asp-validation-for="MaLoaiDauTu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaTri" class="control-label">Giá trị ban đầu</label>
        <input asp-for="GiaTri" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="GiaTri" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}