@model QLTCCN.Models.Data.DauTu

<h2>Sửa đầu tư</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="MaDauTu" />

    <div class="form-group">
        <label asp-for="MaLoaiDauTu" class="control-label">Loại đầu tư</label>
        <select asp-for="MaLoaiDauTu" class="form-control" asp-items="ViewBag.LoaiDauTu" required>
            <option value="">Chọn loại đầu tư</option>
        </select>
        <span asp-validation-for="MaLoaiDauTu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaTri" class="control-label">Giá trị ban đầu</label>
        <input asp-for="GiaTri" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="GiaTri" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaTriHienTai" class="control-label">Giá trị hiện tại</label>
        <input asp-for="GiaTriHienTai" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="GiaTriHienTai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayKetThuc" class="control-label">Ngày kết thúc</label>
        <input asp-for="NgayKetThuc" class="form-control" type="date" value="@(Model.NgayKetThuc.HasValue ? Model.NgayKetThuc.Value.ToString("yyyy-MM-dd") : "")" />
        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}