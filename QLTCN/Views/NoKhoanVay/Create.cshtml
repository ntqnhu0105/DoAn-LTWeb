@model QLTCCN.Models.Data.NoKhoanVay

<h2>Thêm khoản nợ/vay</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SoTien" class="control-label">Số tiền</label>
        <input asp-for="SoTien" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="SoTien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LaiSuat" class="control-label">Lãi suất (%)</label>
        <input asp-for="LaiSuat" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="LaiSuat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KyHan" class="control-label">Kỳ hạn (tháng)</label>
        <input asp-for="KyHan" class="form-control" type="number" required />
        <span asp-validation-for="KyHan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayBatDau" class="control-label">Ngày bắt đầu</label>
        <input asp-for="NgayBatDau" class="form-control" type="date" required />
        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}