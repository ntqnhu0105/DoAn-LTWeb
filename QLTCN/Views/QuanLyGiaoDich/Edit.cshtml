@model QLTCCN.Models.Data.GiaoDich
@using System.Globalization

<h2>Chỉnh sửa giao dịch</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="MaGiaoDich" />
    <input type="hidden" asp-for="MaNguoiDung" />

    <div class="form-group">
        <label asp-for="SoTien">Số tiền (VNĐ)</label>
        <input asp-for="SoTien" class="form-control" type="number" step="0.01" min="0.01" value="@Model.SoTien.ToString("F2", CultureInfo.InvariantCulture)" required />
        <span asp-validation-for="SoTien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoaiGiaoDich">Loại giao dịch</label>
        <select asp-for="LoaiGiaoDich" class="form-control" asp-items="ViewBag.LoaiGiaoDich" required>
            <option value="">Chọn loại</option>
        </select>
        <span asp-validation-for="LoaiGiaoDich" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaTaiKhoan">Tài khoản</label>
        <select asp-for="MaTaiKhoan" class="form-control" asp-items="ViewBag.TaiKhoan" required>
            <option value="">Chọn tài khoản</option>
        </select>
        <span asp-validation-for="MaTaiKhoan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaDanhMuc">Danh mục</label>
        <select asp-for="MaDanhMuc" class="form-control" asp-items="ViewBag.DanhMuc" required>
            <option value="">Chọn danh mục</option>
        </select>
        <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayGiaoDich">Ngày giao dịch</label>
        <input asp-for="NgayGiaoDich" class="form-control" type="date" required />
        <span asp-validation-for="NgayGiaoDich" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}