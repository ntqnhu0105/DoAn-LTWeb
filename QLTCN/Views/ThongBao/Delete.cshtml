@model QLTCCN.Models.Data.ThongBao

<h2>Xóa thông báo</h2>

<h3>Bạn có chắc chắn muốn xóa thông báo này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Loại</dt>
        <dd class="col-sm-10">@Model.Loai</dd>

        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.NoiDung</dd>

        <dt class="col-sm-2">Ngày</dt>
        <dd class="col-sm-10">@Model.Ngay.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaThongBao" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>