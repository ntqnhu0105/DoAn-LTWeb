@model QLTCCN.Models.Data.LoaiDauTu

<h2>Xóa loại đầu tư</h2>

<h3>Bạn có chắc chắn muốn xóa loại đầu tư này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tên loại đầu tư</dt>
        <dd class="col-sm-10">@Model.TenLoai</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaLoaiDauTu" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>