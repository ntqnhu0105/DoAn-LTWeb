@model QLTCCN.Models.Data.NoKhoanVay

<h2>Chi tiết nợ/khoản vay</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tên khoản vay</dt>
        <dd class="col-sm-10">@Model.GhiChu</dd>

        <dt class="col-sm-2">Số tiền</dt>
        <dd class="col-sm-10">@Model.SoTien.ToString("C")</dd>

        <dt class="col-sm-2">Lãi suất</dt>
        <dd class="col-sm-10">@Model.LaiSuat%</dd>

        <dt class="col-sm-2">Kỳ hạn</dt>
        <dd class="col-sm-10">@Model.KyHan tháng</dd>

        <dt class="col-sm-2">Ngày bắt đầu</dt>
        <dd class="col-sm-10">@Model.NgayBatDau.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Ngày đáo hạn</dt>
        <dd class="col-sm-10">@Model.NgayBatDau.AddMonths(Model.KyHan).ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>

        <dt class="col-sm-2">Người dùng</dt>
        <dd class="col-sm-10">@Model.NguoiDung?.FullName (@Model.NguoiDung?.Email)</dd>

        <dt class="col-sm-2">Ghi chú</dt>
        <dd class="col-sm-10">@Model.GhiChu</dd>
    </dl>

    <h4>Lịch sử trả nợ</h4>
    @if (Model.LichSuTraNos != null && Model.LichSuTraNos.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ngày trả</th>
                    <th>Số tiền trả</th>
                    <th>Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lichSu in Model.LichSuTraNos)
                {
                    <tr>
                        <td>@lichSu.NgayTra.ToString("dd/MM/yyyy")</td>
                        <td>@lichSu.SoTienTra.ToString("C")</td>
                        <td>@lichSu.GhiChu</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Chưa có lịch sử trả nợ.</p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>