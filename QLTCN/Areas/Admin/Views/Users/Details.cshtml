@model QLTCCN.Models.Data.ApplicationUser

<h2>Chi tiết người dùng</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Họ và tên</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Vai trò</dt>
        <dd class="col-sm-10">@string.Join(", ", ViewBag.Roles)</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>