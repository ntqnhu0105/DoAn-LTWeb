@model QLTCCN.Models.Data.GiaoDich

<h2>Chi tiết giao dịch</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Ngày giao dịch</dt>
        <dd class="col-sm-10">@Model.NgayGiaoDich.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Loại giao dịch</dt>
        <dd class="col-sm-10">@Model.LoaiGiaoDich</dd>

        <dt class="col-sm-2">Số tiền</dt>
        <dd class="col-sm-10">@Model.SoTien.ToString("C")</dd>

        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.DanhMuc?.TenDanhMuc</dd>

        <dt class="col-sm-2">Tài khoản</dt>
        <dd class="col-sm-10">@Model.TaiKhoan?.TenTaiKhoan</dd>

        <dt class="col-sm-2">Người dùng</dt>
        <dd class="col-sm-10">@Model.NguoiDung?.FullName (@Model.NguoiDung?.Email)</dd>

        <dt class="col-sm-2">Ghi chú</dt>
        <dd class="col-sm-10">@Model.GhiChu</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>